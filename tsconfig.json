{
	"compilerOptions": {
		"module": "ESNext",
		"target": "es6",
		"outDir": "dist",
		"declaration": true,
		"sourceMap": true,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["DOM", "ES6"],
		"moduleResolution": "node"
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"tests"
	]
}